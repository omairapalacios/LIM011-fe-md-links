{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": 0,
        "prefer-destructuring": 0,
        "object-shorthand":"off"
        },
    "overrides": [
        {
        "files": ["*-test.js","*.spec.js"],
        "rules": {
            "no-undef":"off",
            "arrow-body-style":"off"
        }
        }
    ]
}
